/* pages/records/records.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 30rpx;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 1;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
}

.tab.active {
  color: #1AAD19;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1AAD19;
  border-radius: 2rpx;
}

.records-list {
  padding: 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 100rpx 0;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.type-tag {
  font-size: 24rpx;
  color: #1AAD19;
  background: rgba(26, 173, 25, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.status {
  font-size: 24rpx;
}

.status.pending {
  color: #faad14;
}

.status.approved {
  color: #1AAD19;
}

.status.rejected {
  color: #ff4d4f;
}

.record-content {
  border-bottom: 2rpx solid #f5f5f5;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
  width: 160rpx;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time {
  font-size: 24rpx;
  color: #999;
}