.container {
  padding: 30rpx;
  background: #f8f8f8;
}

.form-group {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.value {
  font-size: 32rpx;
  color: #666;
}

.picker {
  padding: 20rpx 0;
  font-size: 32rpx;
}

.placeholder {
  color: #999;
}

.radio-group, .checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.radio, .checkbox {
  font-size: 28rpx;
  color: #666;
}

textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
}

.submit-btn {
  margin-top: 40rpx;
  width: 100%;
} 