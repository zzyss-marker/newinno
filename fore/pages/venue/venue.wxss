.container {
  padding: 30rpx;
}

/* 筛选区域样式 */
.filter-container {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.filter-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.category-scroll {
  white-space: nowrap;
  height: 80rpx;
}

.category-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.category-item.active {
  background-color: #1aad19;
  color: #fff;
}

/* 场地列表样式 */
.venue-list {
  margin-top: 20rpx;
}

.venue-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.venue-info {
  display: flex;
  flex-direction: column;
}

.venue-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.venue-type {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.venue-status {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  width: fit-content;
}

.venue-status.available {
  background-color: #e8f5e9;
  color: #4caf50;
}

.venue-status.unavailable {
  background-color: #ffebee;
  color: #f44336;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.loading text {
  color: #999;
  font-size: 28rpx;
}

.form-group {
  background: rgba(255, 255, 255, 0.95);
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.form-group::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(0, 122, 255, 0.2), transparent);
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.label::after {
  content: '';
  flex: 1;
  height: 1rpx;
  background: linear-gradient(90deg, rgba(0, 0, 0, 0.05), transparent);
  margin-left: 16rpx;
}

.value {
  font-size: 32rpx;
  color: #1A1A1A;
  font-weight: 500;
}

.picker {
  padding: 24rpx;
  font-size: 32rpx;
  background: rgba(245, 247, 250, 0.8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.picker:active {
  background: #E8E8ED;
}

.placeholder {
  color: #999;
}

.radio-group, .checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 8rpx;
}

.radio, .checkbox {
  font-size: 28rpx;
  color: #1A1A1A;
  padding: 20rpx 24rpx;
  background: rgba(245, 247, 250, 0.8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
}

.radio:active, .checkbox:active {
  background: #E8E8ED;
  transform: scale(0.98);
}

.radio radio, .checkbox checkbox {
  margin-right: 16rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: rgba(245, 247, 250, 0.8);
  border: none;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

textarea:focus {
  background: #E8E8ED;
}

.submit-btn {
  margin-top: 48rpx;
  width: 100%;
  background: #007AFF;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  padding: 24rpx 0;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.submit-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(120deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transform: translateX(-100%);
  transition: transform 0.5s;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn:active::after {
  transform: translateX(100%);
} 