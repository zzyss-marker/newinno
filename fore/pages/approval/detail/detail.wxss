.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.detail-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  margin-bottom: 30rpx;
}

.card-header image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1AAD19;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
  width: 160rpx;
}

.devices-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.devices-list text {
  background: #f8f8f8;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  margin: 0;
  font-size: 28rpx;
}

.btn.approve {
  background: #1AAD19;
  color: #fff;
}

.btn.reject {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.btn.return {
  background: #1890ff;
  color: #fff;
} 