/* pages/approval/approval.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 30rpx;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 0;
  position: sticky;
  top: 0;
  z-index: 1;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-item.active {
  color: #1AAD19;
  font-weight: 500;
}

.tab-item.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.tab-text {
  position: relative;
  z-index: 1;
}

.tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1AAD19;
  border-radius: 2rpx;
}

/* 添加点击反馈效果 */
.tab-item:active {
  opacity: 0.8;
}

.records-list {
  padding: 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 100rpx 0;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.record-item.approved {
  border-left: 8rpx solid #1AAD19;
}

.record-item.rejected {
  border-left: 8rpx solid #ff4d4f;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.type-tag {
  font-size: 24rpx;
  color: #1AAD19;
  background: rgba(26, 173, 25, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.status-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.status-tag.approved {
  color: #1AAD19;
  background: rgba(26, 173, 25, 0.1);
}

.status-tag.rejected {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
}

.status-tag.pending {
  color: #faad14;
  background: rgba(250, 173, 20, 0.1);
}

.time {
  font-size: 24rpx;
  color: #999;
}

.record-content {
  border-bottom: 2rpx solid #f5f5f5;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.label {
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.record-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding-top: 10rpx;
}

.btn {
  font-size: 24rpx;
  margin: 0;
  border-radius: 6rpx;
  padding: 0 32rpx;
}

.btn.approve {
  background: #1AAD19;
  color: #fff;
}

.btn.approve:active {
  background: #179b16;
}

.btn.reject {
  background: #ff4d4f;
  color: #fff;
}

.btn.reject:active {
  background: #f5222d;
}

.btn[disabled] {
  opacity: 0.6;
  background: #ccc;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1AAD19;
  border-radius: 50%;
  margin: 0 auto 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.devices-list {
  display: inline;
  word-break: keep-all;
  white-space: normal;
}

.devices-list text:last-child::after {
  content: '';
}

.devices-list text:not(:last-child)::after {
  content: '、';
}