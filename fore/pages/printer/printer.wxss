/* pages/printer/printer.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

.printer-list {
  margin-bottom: 30rpx;
}

.printer-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.printer-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.printer-icon {
  width: 48rpx;
  height: 48rpx;
}

.printer-name {
  font-size: 32rpx;
  color: #333;
}

.printer-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.printer-status.available {
  background: #e8f5e9;
  color: #4caf50;
}

.printer-status.busy {
  background: #ffebee;
  color: #f44336;
}

.reserve-btn {
  min-width: 160rpx;
  margin: 0;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
}

.reservation-form {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  z-index: 100;
  padding: 30rpx;
  box-sizing: border-box;
}

.form-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
}

.form-group {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.picker {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.placeholder {
  color: #999;
}

.submit-btn {
  margin-top: 60rpx;
}

button[type="primary"] {
  background: #1AAD19;
}