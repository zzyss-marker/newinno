.container {
  padding: 20rpx;
}

.section {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1AAD19;
}

.button-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.btn {
  flex: 1;
  min-width: 200rpx;
  margin: 0;
  background: #f8f8f8;
  color: #333;
  font-size: 28rpx;
  padding: 20rpx 0;
  text-align: center;
  border-radius: 8rpx;
  border: 2rpx solid #e0e0e0;
}

.btn:active {
  background: #e0e0e0;
} 