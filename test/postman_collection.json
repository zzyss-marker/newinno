            },
            "url": {
              "raw": "{{base_url}}/api/reservations/venue",
              "host": ["{{base_url}}"],
              "path": ["api", "reservations", "venue"]
            }
          }
        },
        {
          "name": "创建设备预约",
          "request": {
            "method": "POST",
