            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reservations/venue/occupied-times?venue_type=会议室&date=2024-02-01",
              "host": ["{{base_url}}"],
              "path": ["api", "reservations", "venue", "occupied-times"],
              "query": [
                {
                  "key": "venue_type",
                  "value": "会议室"
                },
                {
                  "key": "date",
                  "value": "2024-02-01"
                }
              ]
            }
          }
        }
      ]
