              "raw": "{\n  \"printer_name\": \"3D打印机A\",\n  \"reservation_date\": \"2024-02-01\",\n  \"print_time\": \"2024-02-01 10:00\",\n  \"end_time\": \"2024-02-01 14:00\",\n  \"estimated_duration\": 240,\n  \"model_name\": \"手机壳模型\",\n  \"teacher_name\": \"李老师\"\n}"
